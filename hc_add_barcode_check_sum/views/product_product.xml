<?xml version="1.0"?>
<odoo>

    <record id="view_product_form_inherit_for_purchase_reason" model="ir.ui.view">
        <field name="name">product.category.stock.purchase.type.form.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_add_check_sum" invisible="1"
                        string="Add Check Sum" type="object"
                        class="oe_highlight" groups="base.group_user"/>
            </xpath>
        </field>
    </record>

</odoo>

